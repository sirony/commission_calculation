{
    "name": "md-shariful-islam/commission-calc",
    "description": "Commission calculation recruitment task",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "nesbot/carbon": "^2.66",
        "carbon-cli/carbon-cli": "^1.2"
    },
    "authors": [
        {
            "name": "Shariful Islam",
            "email": "sirony25@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "friendsofphp/php-cs-fixer": "^3.16",
        "larapack/dd": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\" : "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
